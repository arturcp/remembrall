<div id="sign-user" class="hide-on-med-and-down">
  <% if current_user %>
    <a class="dropdown-button" href="#" data-activates="dropdown1"
      data-hover="false" data-constrainwidth="false" data-alignment="bottom" data-beloworigin="true">
      <%= image_tag(current_user.avatar_url, class: 'responsive-img activator current-user-avatar')  %>
    </a>

    <ul id='dropdown1' class='dropdown-content'>
      <%= render 'layouts/menu_options' %>
    </ul>
  <% else %>
    <%= link_to '/auth/slack' do %>
      <div class="sign_in_with_slack_button"></div>
    <% end %>
  <% end %>
</div>
