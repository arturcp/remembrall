<div class="col s12 m6 l4">
  <div class="card article-card" data-article-id="<%= id %>">
    <div class="card-image waves-effect waves-block waves-light">
      <%= link_to url, target: :blank do %>
        <%= image_tag image_url, class: 'activator' %>
      <% end if image_url %>

      <div class="card-created-at">
        <div class="chip"><%= created_at.strftime('%d/%m/%Y') %></div>
      </div>
    </div>
    <div class="card-content">
      <%= image_tag(author.avatar_url, class: 'circle responsive-img activator card-profile-image') if author.avatar_url.present? %>

      <%= render 'shared/favorite', favorited: favorited %>

      <span class="card-title">
        <%= link_to url, target: :blank do %>
          <%= highlighted_text(title, highlighted) %>
        <% end %>
      </span>
      <div class="card-description">
        <%= link_to url, target: :blank do %>
          <%= highlighted_text(description, highlighted) %>
        <% end %>

        <% if local_assigns[:channel] %>
          <div class="posted-on">
            <%= link_to tags_path(collection: collection, tag: channel) do %>
              Posted on <%= image_tag "slack.png" %> <span><%= channel %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-tags right-align">
      <% tags.each do |tag| %>
        <%= link_to tags_path(collection, tag: tag.name) do %>
          <div class="chip"><%= tag %></div>
        <% end %>
      <% end %>

      <% if tags.count > 3 %>
        <div class="chip">...</div>
      <% end %>
    </div>
    <div class="card-action">
      <%= link_to 'Ir para o site', url, target: :blank, class: 'redirect-link' %>

      <div class="card-author">
        Enviado por <b><%= author.name %></b>
      </div>
    </div>
  </div>
</div>
