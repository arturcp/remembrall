<% if @tag %>
  <div class="tags-control green lighten-5">
    <p class="green-text center-align">
      You are seeing the result for <mark>#<%= @tag %></mark>.
      <a data-activates="slide-out">Change the query</a> or
      <%= link_to 'remove the filter', articles_path(@collection) %>
    </p>
  </div>
<% end %>

<%= render 'shared/articles_list', articles: @articles, query: @query, collection: @collection %>
<%= render 'shared/open_slide_menu_button' %>
