<div class="col s12 m6 l4">
  <div class="card article-card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= link_to url, target: :blank do %>
        <%= image_tag image_url, class: 'activator' %>
      <% end if image_url %>
    </div>
    <div class="card-content">
      <%= image_tag(author.avatar_url, class: 'circle responsive-img activator card-profile-image') if author.avatar_url.present? %>

      <%= render 'favorite', favorited: favorited %>

      <span class="card-title">
        <%= link_to url, target: :blank do %>
          <%= highlighted_text(title, highlighted) %>
        <% end %>
      </span>
      <div class="card-description">
        <%= link_to url, target: :blank do %>
          <%= highlighted_text(description, highlighted) %>
        <% end %>
      </div>
    </div>
    <div class="card-tags right-align">
      <div class="chip">Compartilhado em <%= created_at.strftime('%d/%m/%Y') %></div>
    </div>
    <div class="card-action">
      <%= link_to 'Ir para o site', url, target: :blank, class: 'redirect-link' %>

      <div class="card-author">
        Enviado por <b><%= author.name %></b>
      </div>
    </div>
  </div>
</div>
